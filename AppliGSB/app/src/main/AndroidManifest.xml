<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appli_gsb">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".AppliMenu"
            android:label="AppliMenu"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".AjoutEchantillon"
            android:label="AjoutEchantillon"
            android:parentActivityName=".AppliMenu"/>

        <activity android:name=".ListeEchantillon"
            android:label="ListeEchantillon"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".MajEchantillon"
            android:label="MajEchantillon"
            android:parentActivityName=".MainActivity"/>

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity"/>
    </application>

</manifest>